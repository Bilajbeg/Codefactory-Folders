{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
<div class="container border border-3 border-white rounded mt-5 p-3 shadow-lg bg-light">
    <h1>Todo</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ todo.description }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ todo.priority }}</td>
            </tr>
            <tr>
                <th>CreateDate</th>
                <td>{{ todo.createDate ? todo.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_todo_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" class="btn btn-warning mx-1">edit</a>


    {{ include('todo/_delete_form.html.twig') }}
</div>
{% endblock %}